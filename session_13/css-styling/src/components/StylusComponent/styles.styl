$font-size = 14px

clearfix()
  &:before,
  &:after
    content: " "
    display: table
  &:after
    clear: both


text-left()
  text-align: left

/*
* Adds the given numbers together.
*/
get-grey(s = false)
  if s == 50
    rgba(#fafafa)
  else if s == 100
    rgba(#f5f5f5)
  else
    rgba(#9e9e9e)

.header
  background-color: get-grey(50)
  color: get-grey(400)
  padding: 60px 20px 50px 110px
  position: relative

  h1
    margin: 0
    font-size: 44px
    font-weight: 600
    font-style: italic
  a
    color: get-grey(100)
